<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welkom"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ListView
            android:id="@+id/parkeerwachterLijst"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:dividerHeight="1dp" />

        <Button
            android:id="@+id/openOvertreding"
            android:text="Open test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="openActivity"
            android:tag="overtreding"/>

        <Button
            android:id="@+id/openNieuweOvertreding"
            android:text="Registreer een nieuwe overtreding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="openActivity"
            android:tag="nieuweOvertreding"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>