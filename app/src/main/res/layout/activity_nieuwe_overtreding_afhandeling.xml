<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NieuweOvertredingAfhandelingActivity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/geenVoorgaandeOvertredingen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nieuweOvertredingAfhandeling_geenGeassocieerdeOvertredingen"
                android:visibility="invisible" />

            <ListView
                android:id="@+id/geassocieerdeOvertredingen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:dividerHeight="1dp"
                android:visibility="invisible" />

            <Spinner
                android:id="@+id/gevolgTypes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawSelectorOnTop="true" />

        </LinearLayout>

    </ScrollView>


</android.support.constraint.ConstraintLayout>